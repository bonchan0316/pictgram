<div class="topic-index-wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <%= link_to new_comment_path(topic_id: topic.id), method: :post do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <% @favorite_topics.each do |comment| %>
              <div>
                <strong><%= comment.user.name %></strong>
                <br />
                <p class="topic-text">
                  <%= comment.body %>
                </p>
                <% if logged_in? && comment.user == current_user %>
                  <p><%= link_to 'Delete', comment_path(comment), method: delete %></p>
                <% end %>
              </div>
            <% end %>
            <% if logged_in? %>
              <%= render 'comments/form' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
